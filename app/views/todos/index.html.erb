<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-50">
      <div class="col col-lg-12 col-xl-12">
        <div class="card rounded-3">
          <div class="card-body p-4">
            <h4 class="text-center my-3 pb-3">All taskes</h4>
            <%= link_to "Add New Task", new_todo_path, class: "btn btn-success"%>
            <br>
            <table class="table mb-4">
              <thead>
                <tr>
                  <th scope="col">Todo Title</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @todo.each do |todo| %>
                    <tr>
                    <% if todo.active == true %>
                        <td><del>todo.title</del></td>
                        <td><mark>Completed<mark></td>
                    <% else %>
                      <td><%= todo.title %></td>
                      <td>Not Completed</td>
                    <% end %>
                        <td>
                            <%= link_to 'Show', todo, class: "btn btn-success ms-1" %>
                            <%= link_to 'Edit', edit_todo_path(todo), class: "btn btn-success ms-1" %>
                            <span style="display: inline-block"><%= button_to "Delete", todo, class: "btn btn-danger",  method: :delete %></span>
                            <%# <button type="submit" class="btn btn-danger">Delete</button>  %>
                        </td>
                    </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>